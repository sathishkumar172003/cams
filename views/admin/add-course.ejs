

<%- include('../includes/admin_navbar') %> 

<div id="main">

    <div class="container-fluid " style="position: relative; top:105px; ">
        <% if(addCourseFailure){ %> 
            <div class="alert alert-danger text-center mt-5 ms-2" style="width: 1409px;">
                <%= addCourseFailure %> 
            </div>
        <% } %> 
        
        <% if(addCourseSuccess){ %> 
        <div class="alert alert-success  text-center mt-5 ms-2" style="width: 1409px;">
            <%= addCourseSuccess %> 
        </div>
        <% } %>

        <div class="col-div-10">
    
            <div class="box-8">
            <div class="content-box mt-5">
                
                <div class="card box">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="text-white">Add Course</h3>
                        </div>
                    </div>
                    <div class="card-body">
                       
                        <form action="/admin/addcourse" method="POST">
                            <label class="form-label text-warning mb-2"> Department </label>
                            <input type="text" name="department" class="form-control" >
                        
                            <label  class="form-label mt-3 text-warning" >Course name : </label>
                            <input type="text" name="course"  class="form-control">
                        
                            <button type="submit" class="btn btn-success mt-4">Add course </button>
                        
                        </form>



                    </div>
                </div>
                

            </div>
            </div>
        </div>

      


        

    </div>





</div>

