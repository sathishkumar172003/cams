

<%- include('../includes/admin_navbar') %> 

<div id="main">

    <div class="container-fluid" style="position: relative; top:105px; ">

        <div class="col-div-10">
            <div class="box-8">
            <div class="content-box mt-5">

                <div class="card box">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="text-white">Update User</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/admin/updateuser/<%= user.id %>" method="POST" enctype="multipart/form-data">
                            <label class="form-label text-warning">Enter your name</label>
                            <input type="text" name="username" value="<%= user.username %> " class="form-control mb-3">
                

                            <label  class="form-label text-warning">Student Pic</label>
                            <input type="file" name="studentPic" value="<%= user.profile %> " class="form-control" > <br> 
                            <button type="submit" class="btn  btn-primary" style="margin-left:150px; margin-top:40px;"> Update </button>
                            
                        </form>
                    </div>
                </div>


            </div>
            </div>
        </div>

    </div>

</div>
