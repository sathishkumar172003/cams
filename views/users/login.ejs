<%- include('../includes/header') %> 

<div class="container">
    <div class="card" style="width:500px; margin-left:400px; margin-top:100px; margin-bottom:150px; padding:50px;;">

        <% if(resetSuccess) { %>
            <div class='alert alert-success text-center'>
                <%= resetSuccess %> 
            </div>
        <% } %>

        <% if(message) { %>
            <div class='alert alert-danger text-center'>
                <%= message %> 
            </div>
        <% } %>
        <h1 class="card-title mb-4" style="margin-left:130px;"> Login </h1>
     
        <form action="/users/login" method="POST"> 

       
        <div class="card-body">
            <label  class="form-label">Enter your email </label>
            <input 
            type="text" 
            name="email"  
            class="<%= validationError.find(e => e.path == 'email') ? 'form-control mb-3 is-invalid' : 'form-control mb-3'%> " 
            value="<%= oldInputs.email %>">

            <label  class="form-label">Enter your password</label>
            <input 
            type="text" 
            name="password"  
            class="<%= validationError.find(e => e.path == 'password') ? 'form-control mb-3 is-invalid' : 'form-control mb-3'%>"
            value="<%= oldInputs.password %>">

            <p class="text-muted">Don't have an account? <a href="/users/sign">Sign in</a></p>
            <p class="text-muted">Forgot Password ? <a href="/users/resetpassword">Reset password</a></p>
            <button type="submit" class="btn btn-lg btn-primary">Login</button>
        </div>
    </form>
    </div>
</div>



<%- include('../includes/footer') %> 