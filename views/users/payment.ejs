<%- include('../includes/header') %> 

<div class="container">
    <% if(message) { %> 
        <div class="row" style="height: 600px;">
            <div class="card mt-5" style="background-color: #F2D4D6; height:200px;">
                <div class="card-body">
                    <div class="card-text">
                        <h5> Your application has not yet been accepted. </h5>
                        <h5> You can pay the fee once your  application gets accepted to pay the fee</h5>
                    </div>
                </div>
            </div>
        </div>
      
        
    <% } else { %> 
        <div class="row" style="height: 600px;">
        <% applications.forEach(application => { %> 
            <div class="col">
                <div class="card mt-5 " style="width:500px; height:300px;background-color: #143d59; color: white;">
                    <div class="card-header">
                        <h5 class="card-title" style="font-size: 25px;"> <%= application.course %> </h5>
                    </div>
                    <div class="card-body"  style="background-color: #f4b41a; font-size: 20px; color: black;">
                        <p>Status : <%= application.formStatus %> </p>
                        <p>Fee Amount : Rs. 50,000</p>
                        <button  class="btn mt-5" type="button" style="width:250px; border:3px solid black; background-color: #EEA47F;"> <a href="/users/checkout/<%= application.id %>" style="color: black; text-decoration: none;" class="btn">Click here to pay the fee</a></button>
                    </div>
                </div>
            </div>
          
            
        <% }) %> 

        </div>

   <%  } %> 



</div>


<%- include('../includes/footer') %> 