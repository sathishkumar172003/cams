<%- include('../includes/header') %> 

<div class="container">
    <% if(message) { %> 
        <div class="row" style="height: 600px;">
            <div class="card mt-5" style="background-color: burlywood; height:200px;">
                <div class="card-body">
                    <div class="card-text">
                        <h5> Your application has not yet been accepted. </h5>
                        <h5> You can pay the fee once your  application gets accepted to pay the fee</h5>
                    </div>
                </div>
            </div>
        </div>
      
        
    <% } else { %> 
        <div class="row" style="height: 600px;">
        <% applications.forEach(application => { %> 
            <div class="col">
                <div class="card mt-5 " style="width:500px; height:200px;background-color: beige;">
                    <div class="card-header">
                        <h5 class="card-title"> <%= application.course %> </h5>
                    </div>
                    <div class="card-body">
                        <p>Status : <%= application.formStatus %> </p>
                        <p>Fee Amount : Rs. 50,000</p>
                        <button  class="btn btn-warning" type="button">Click here to pay the fee</button>
                    </div>
                </div>
            </div>
          
            
        <% }) %> 

        </div>

   <%  } %> 
</div>


<%- include('../includes/footer') %> 