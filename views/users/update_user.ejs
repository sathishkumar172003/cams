<%- include('../includes/header') %>
    <div class="container">
        <div class="card" style="width:500px; margin-left:400px; margin-top:100px; margin-bottom:150px; padding:50px;;">
    


            <% if(validationMsg){ %> 
               
                    <%= validationMsg %> 
               
           <%  } %> 

           
             <h1 class="card-title mb-5" style="margin-left:130px;"> Update </h1>
            <form action="/users/updateuser" method="POST" enctype="multipart/form-data">
                <label class="form-label">Enter your name</label>
                <input type="text" name="username" value="<%= current_user.username %> " class="form-control mb-3">
    
               
                <label  class="form-label">Student Pic</label>
                <input type="file" name="studentPic" value="<%= current_user.profile %> " class="form-control" required> <br> 
                <button type="submit" class="btn  btn-primary" style="margin-left:150px; margin-top:40px;"> Update </button>
                
            </form>
        </div>
    </div>
    
<%- include('../includes/footer') %> 





