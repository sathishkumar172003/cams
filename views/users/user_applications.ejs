<%- include('../includes/header') %> 

<div class="container">
    <% if(applications.length == 0) { %> 
        <div style="height:480px;">
            <h1 class="text-danger mt-5">You have not submitted any applications </h1>
            <button class="btn btn-success"><a href="/applicationForm">Apply Now </a></button>

        </div>
       
       
    <% } else { %> 


 
        <% applications.forEach(application => { %> 
    
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"> <%= application.course %> </h3>
                </div>
                <div class="card-body">
                    <p class="card-text"> <%= application.formStatus %> </p>
                    <% if(application.payment == false){ %> 
                        <p class="card-text"> Not paid </p>
                    <% } else { %> 
                        <p class="card-text"> Paid </p>
                    <% } %>  
                </div>
            </div>


        <% }) %> 

    <% }%> 
   
</div>



<%- include('../includes/footer') %> 